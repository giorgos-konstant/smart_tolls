{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web (HTML Renderer)",
      "request": "launch",
      "type": "dart",
      "program": "frontend/lib/main.dart",
      "args": [
        "--web-renderer",
        "html"
      ],
      "deviceId": "chrome"
    },
    {
      "name": "Node.js",
      "type": "node",
      "request": "launch",
      "program": "backend/backend.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--inspect-brk=9229"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Flutter Windows",
      "request": "launch",
      "type": "dart",
      "program": "frontend/lib/main.dart",
      "deviceId": "windows"
    },
  ],
  "compounds": [
    {
      "name": "Flutter Web and Node.js",
      "configurations": ["Flutter Web (HTML Renderer)", "Node.js"]
    }
  ]
}